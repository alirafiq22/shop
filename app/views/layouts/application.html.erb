<!DOCTYPE html>
<html>
<head>
  <title>Shop</title>
  

  <%= csrf_meta_tags %>
</head>
<body>

<div id="user_header">
	<% if current_user %>
	  Logged in as <%= current_user.email %>
	  <%= link_to "Log out", logout_path %>
	<% else %>
	  <%= link_to "Sign Up", signup_path %> OR
	  <%= link_to "Log In", login_path %>
	<% end %>
</div>

<% flash.each do |key, value| %>
	<%= content_tag(:div, class: "alert alert-#{key}") do %>
		<p><%= value %></p>
	<% end %>
<% end %>

<%= yield %>

</body>
</html>
